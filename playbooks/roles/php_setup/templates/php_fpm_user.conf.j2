[{{ web_user }}]
listen = /run/php/php{{ default_php_version }}-fpm-{{ web_user }}.sock
listen.owner = {{ web_user }}
listen.group = www-data
user = {{ web_user }}
group = {{ web_user }}

pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3
php_value[error_log] = /home/{{ web_user }}/var/php-fpm/error.log

access.log = /home/{{ web_user }}/var/php-fpm/access.log
;  %u: remote user
;
; Default: "%R - %u %t \"%m %r\" %s"
access.format = "%t %{HTTP_X_REQUEST_ID}e %m %{HTTP_HOST}e %f pid:%p took:%ds mem:%{mega}Mmb cpu:%C%% status:%s %{REMOTE_ADDR}e"